{
  "name": "Social box",
  "description": "Tiện ích của social box",
  "version": "0.0.9",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "http://sbox.staging/*",
    "https://sbox.staging/*",
    "activeTab",
    "https://www.facebook.com/*" ,
    "https://web.facebook.com/*,*://*/*",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "sbox.staging",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}
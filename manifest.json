{
  "name": "SocialBox",
  "description": "Tiện ích của social-box",
  "version": "0.0.1",
  "permissions": [
    "cookies",
    "tabs",
    "storage",
    "activeTab",
    "http://*/",
    "https://*/"
  ],
  "browser_action": {
    "default_title": "sbox.staging",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "manifest_version": 2
}